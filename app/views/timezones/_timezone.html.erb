    <strong class="block font-medium mb-1">Name:</strong>
    <%= timezone.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= timezone.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Utc offset:</strong>
    <%= timezone.utc_offset %>
  </div>
</div>
