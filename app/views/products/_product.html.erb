<div id="<%= dom_id product %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Company:</strong>
    <%= product.company_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Product brand:</strong>
    <%= product.product_brand_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= product.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= product.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= product.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Business type:</strong>
    <%= product.business_type %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Discarded at:</strong>
    <%= product.discarded_at %>
  </div>
</div>
