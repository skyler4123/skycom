<div id="<%= dom_id statistic %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Owner:</strong>
    <%= statistic.owner_id %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Name:</strong>
    <%= statistic.name %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= statistic.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Data:</strong>
    <%= statistic.data %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Recorded at:</strong>
    <%= statistic.recorded_at %>
  </div>
</div>
