<%= form_with(model: statistic, class: "contents") do |form| %>
  <% if statistic.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(statistic.errors.count, "error") %> prohibited this statistic from being saved:</h2>

      <ul class="list-disc ml-6">
        <% statistic.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :owner_id %>
    <%= form.text_field :owner_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": statistic.errors[:owner_id].none?, "border-red-400 focus:outline-red-600": statistic.errors[:owner_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :data %>
    <%= form.text_field :data, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": statistic.errors[:data].none?, "border-red-400 focus:outline-red-600": statistic.errors[:data].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :recorded_at %>
    <%= form.datetime_field :recorded_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": statistic.errors[:recorded_at].none?, "border-red-400 focus:outline-red-600": statistic.errors[:recorded_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
