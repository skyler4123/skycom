<%= form_with(model: period, class: "contents") do |form| %>
  <% if period.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(period.errors.count, "error") %> prohibited this period from being saved:</h2>

      <ul class="list-disc ml-6">
        <% period.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :company_id %>
    <%= form.text_field :company_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:company_id].none?, "border-red-400 focus:outline-red-600": period.errors[:company_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:name].none?, "border-red-400 focus:outline-red-600": period.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.text_field :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:description].none?, "border-red-400 focus:outline-red-600": period.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :code %>
    <%= form.text_field :code, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:code].none?, "border-red-400 focus:outline-red-600": period.errors[:code].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:duration].none?, "border-red-400 focus:outline-red-600": period.errors[:duration].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :start_at %>
    <%= form.datetime_field :start_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:start_at].none?, "border-red-400 focus:outline-red-600": period.errors[:start_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :end_at %>
    <%= form.datetime_field :end_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:end_at].none?, "border-red-400 focus:outline-red-600": period.errors[:end_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :expire_at %>
    <%= form.datetime_field :expire_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:expire_at].none?, "border-red-400 focus:outline-red-600": period.errors[:expire_at].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :discarded_at %>
    <%= form.datetime_field :discarded_at, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": period.errors[:discarded_at].none?, "border-red-400 focus:outline-red-600": period.errors[:discarded_at].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
